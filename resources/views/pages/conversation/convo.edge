<div class="container d-flex flex-wrap bg-light rounded shadow-lg mb-4" style="min-height: 500px">

    <div class="container p-0 d-flex justify-content-center align-items-center">

        <div class="container d-flex p-3 rounded gap-3" style="min-height: 30rem">

            <div class="container p-0">

                <div class="container p-0 d-flex mb-2">
                    <div class="me-3">
                        <a><img src="/uploads/avatars/{{ conversation.receiver_avatar }}" alt="Profile" class="rounded"
                                width="60" height="60"></a>
                    </div>

                    <div>
                        <div class="mb-2">
                            <h6 class="card-title">{{conversation.receiver}} </h6>
                        </div>

                        <div class="mb-3">
                            <h5 class="card-title">Product: {{conversation.product}} </h5>
                        </div>
                    </div>
                </div>

                <div class="container d-flex flex-column border rounded mb-3"
                    style="min-height: 20rem; max-height: 20rem; overflow-y: auto;" id="messagesContainer">

                    @if(messages)

                    @each(message in messages)
                    <div class="container d-flex border bg-light rounded mb-2 mt-2">
                        {{message.content}}
                    </div>
                    @end

                    @end
                </div>


                <div>
                    <form method="POST" action="" class="d-flex gap-1">
                        {{ csrfField() }}
                        <input class="form-control" type="text" name="message" placeholder="Type..." required>
                        <button class="btn btn-success" type="submit">Send</button>
                    </form>
                </div>

            </div>
        </div>

    </div>

</div>